<%= render 'shared/errors', object: @user %>

<div class="row">
    <div class="col-xs-12">
      <%= form_for(@user, :html => { class: "form-horizontal", role: "form" }) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :username, "Usuario"  %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :username, class: "form-control", placeholder: "Nombre de usuario", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email, "Correo"  %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "Correo electrónico" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password, "Contraseña"  %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", placeholder: "Tu contraseña" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit(@user.new_record? ? "Registrarse" : "Modificar tu cuenta", class: "btn btn-primary btn-lg") %>
          </div>
        </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Regresar a todos los artículos", articles_path %> ]
      </div>
    </div>
</div>